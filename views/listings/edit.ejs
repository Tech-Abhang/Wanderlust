<% layout("/layouts/boilerplate") %>
<br>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
            <h3>Edit your listing</h3><br>
            <div class="mb-3">
                <label for="title" class="form-label" required>Title</label>
                <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter valid title</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">description</label>
                <input name="listing[description]" value="<%= listing.description %>" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter a short description</div>
            </div>
        
            <div class="mb-3">
                <label for="image" class="form-label" required>image link</label>
                <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter valid image url</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label" required>price</label>
                    <input name="listing[price]" value="<%= listing.price %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">please enter valid price</div>
                </div>
            
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label" required>location</label>
                    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">please enter valid location</div>
                </div>
            </div>
        
            <div class="mb-3">
                <label for="country" class="form-label" required>country</label>
                <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter valid country</div>
            </div>
            <br>
            <button class="btn submit-btn mt-3">Submit</button>
            <br>
        </form>
    </div>
</div>


